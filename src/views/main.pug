<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        link(rel="shortcut icon", href="images/logo.ico", type="image/x-icon")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/header.css")
        link(rel="stylesheet", href="css/section.css")
        title Noting
    body
        block head 
            header
                a(href="/")
                    h1.tit Noting
        block section
            form(action="/", method="post").note_writer
                .contenido    
                    input(name="title" type="text" minlength='5' maxlength='15' placeholder='Title' autocomplete="off" required)
                    textarea(name="content", cols="30", rows="4" minlength='5' placeholder='Your note....' required)
                    .enviar
                        button Save
            .the_notes
                -for(i=0; i < notes.length; i++)
                    #note
                        .in
                            .head_note
                                h4= notes[i].title
                                img(src="images/menu (1).svg", alt="")#menu
                            hr
                            #options_note
                                form(action=`/edit`, method="post")
                                    input(type="text" name='note_db' value=`${notes[i].id}`)
                                    input(type="text" name='note_front' value=`${i}`)
                                    button.edit
                                        img(src="images/edit.svg", alt="")
                                form(action=`/delete/${notes[i].id}`, method="post")
                                    button.delete
                                        img(src="images/delete.svg", alt="")
                            .body_note= notes[i].content
                                .time
                                    img(src="images/time.svg", alt="time")
                                    p=` ${time(notes[i].upload_time)}`
    script(src="js/menu.js")
    script(src="js/poper.js")